@model Kitchen.Models.LoginModel


@using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <text>
    <div id="vhod">
      <div id="tit_line">
        <h1>Выполнить вход</h1>
        <h2>Используйте для входа локальную учетную запись</h2>
      </div>
      <div style="margin-top:25px;">
         Имя <input data-val="true" data-val-required="Требуется поле Имя пользователя." id="UserName" name="UserName" style="width:205px; margin-left:33px;" class="kuh_field" type="text" value=""><br /><br />
         Пароль <input data-val="true" data-val-required="Требуется поле Пароль." id="Password" name="Password" style="width:134px; margin-left:10px;" class="kuh_field" type="password">
        <button class="blue_btn" type="submit" style="width:60px; margin-left:7px;">Вход</button>
      </div>
    </div>
    </text>
    
}
</section>
<section class="social" id="socialLoginForm">
    @*<h2>Используйте для входа другую службу.</h2>
    @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })*@
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
